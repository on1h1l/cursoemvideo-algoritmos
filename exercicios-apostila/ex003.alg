algoritmo "ex003"
var
   emp_name: caractere
   emp_sal: real
inicio
      escreva("Nome do funcionário:")
      leia(emp_name)
      escreva("Salário do funcionário: R$")
      leia(emp_sal)
      
      limpaTela
      escrevaL("O funcionário ",emp_name," recebeu R$",emp_sal," esse mês.")
fimalgoritmo
