algoritmo "ex005"
var
   n1, n2, avg: real
inicio
      escreva("Digite a primeira nota:")
      leia(n1)
      escreva("Digite a segunda nota:")
      leia(n2)
      
      avg <- (n1+n2)/2
      
      limpaTela
      escrevaL("A média entre",n1," e",n2," é igual a",avg)
fimalgoritmo
